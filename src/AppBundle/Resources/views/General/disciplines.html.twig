{% extends 'AppBundle::sitelayout.html.twig' %}
{% block head_title %}Список дисциплин - {% endblock %}
{% block head_style %}{% endblock %}

{% block head_additions %}
    <meta name="description" content="Список дисциплин, к которым относятся файлы в файловом хранилище студенческих файлов с возможностью он-лайн просмотра и скачивания без регистрации и смс">
{% endblock %}

{% block body_content %}
    <h1 class="page-header">Список дисциплин</h1>
    {% set symbol='' %}
    {% for discipline in view.disciplines  %}
        {% if discipline.caption|slice(0, 1) !=symbol %}
            {% if loop.index >1 %}</div>{% endif %}
            <div class="row">
                <h2>{{ discipline.caption|slice(0, 1)|upper }}</h2>
                <div class="col-xs-4">
                    <a href="{{ url('homepage',{'form_filter[discipline]':discipline.id|e}) }}">{{ discipline.caption|e }} (Всего: {{ discipline.products|length }})</a>
                </div>
            {% set symbol=(discipline.caption|slice(0, 1)) %}
        {% else %}
            <div class="col-xs-4">
                <a href="{{ url('homepage',{'form_filter[discipline]':discipline.id|e}) }}">{{ discipline.caption|e }} (Всего: {{ discipline.products|length }})</a>
            </div>
        {% endif %}
    {% endfor %}
    </div>
{% endblock %}

{% block body_additions %}

{% endblock %}