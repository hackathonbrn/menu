{% extends 'AppBundle::layout.html.twig' %}
{% set dish=view.dish %}
{% set step=4 %}

{% block head_title %}Отзывы/комменты{% endblock %}


{% block head_additions %}

{% endblock %}

{% block body_content %}
    {% include 'AppBundle:Dishes:header.html.twig' %}
    {% include 'AppBundle:Dishes:navigation.html.twig' %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Дата</th>
            <th>Имя</th>
            <th>Почта</th>
            <th>Оценка</th>
            <th>Текст</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for review in dish.reviews %}
            <tr>
                <td>
                   {{ review.createdAt|russian_date }}
                </td>
                <td>
                    {{ review.author|e }}<br>
                </td>
                <td>
                    {{ review.email|e }}
                </td>
                <td>
                    {{ review.ball|e}}
                </td>
                <td>
                    {{ review.description|slice(0,150)}}..
                </td>
                <td>
                   <a class="btn btn-info" href="">Изменить</a>
                   <a class="btn btn-danger" href="{{ url('admin_reviews_delete', {'review':review.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block body_additions %}

{% endblock %}
